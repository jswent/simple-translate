{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Simple Translate",
  "version": "0.1.1",
  "identifier": "com.simple-translate.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Simple Translate",
        "width": 900,
        "height": 650
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: James Swent (X73LDR84M8)",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist"
    }
  }
}
